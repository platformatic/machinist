{
  "$schema": "https://schemas.platformatic.dev/@platformatic/service/2.22.0.json",
  "server": {
    "hostname": "0.0.0.0",
    "port": "{PLT_PORT}",
    "logger": {
      "level": "{PLT_LOGGER_LEVEL}"
    },
    "pluginTimeout": 60000,
    "healthCheck": true
  },
  "service": {
    "openapi": true
  },
  "metrics": {
    "hostname": "0.0.0.0",
    "port": 9091
  },
  "plugins": {
    "paths": [
      { "path": "./plugin.js" }
    ]
  },
  "watch": "{PLT_DEV_MODE}"
}
